// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.245.0/containers/javascript-node
{
  "name": "Node.js",
  "build": {
    "dockerfile": "Dockerfile",
    // Update 'VARIANT' to pick a Node version: 18, 16, 14.
    // Append -bullseye or -buster to pin to an OS version.
    // Use -bullseye variants on local arm64/Apple Silicon.
    "args": { "VARIANT": "" }, // Use latest
    "runArgs": ["--sysctl", "net.ipv6.conf.all.disable_ipv6=1"]
  },

  // Configure tool-specific properties.
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "dbaeumer.vscode-eslint",
        "pejmannikram.vscode-auto-scroll",
        "mgmcdermott.vscode-language-babel",
        "naumovs.color-highlight",
        "GitHub.vscode-pull-request-github",
        "ecmel.vscode-html-css",
        "oderwat.indent-rainbow",
        "esbenp.prettier-vscode",
        "humao.rest-client",
        "actboy168.tasks",
        "jeremyrajan.webpack",
        "DigitalBrainstem.javascript-ejs-support",
        "redhat.vscode-yaml",
        "leonzalion.vscode-ejs",
        "ritwickdey.LiveServer",
        "mkxml.vscode-filesize",
        "wix.vscode-import-cost",
        "tonybaloney.vscode-pets",
        "marvinhagemeister.theme-afterglow-remastered",
        "naumovs.theme-oceanicnext",
        "eamodio.gitlens",
        "SonarSource.sonarlint-vscode",
        "christian-kohler.npm-intellisense",
        "donjayamanne.githistory",
        "shyykoserhiy.git-autoconfig",
        "THEARC.doppler",
        "nicollasr.vscode-streamdeck",
        "mhutchie.git-graph",
        "fudd.toggle-zen-mode",
        "yatki.vscode-surround",
        "mutantdino.resourcemonitor",
        "unifiedjs.vscode-mdx",
        "bradlc.vscode-tailwindcss",
        "svelte.svelte-vscode",
        "ms-playwright.playwright",
        "GraphQL.vscode-graphql-syntax",
        "alefragnani.project-manager",
        "cesium.gltf-vscode",
        "ms-azuretools.vscode-docker",
        "GitHub.copilot-nightly",
        "tamasfe.even-better-toml",
        "usernamehw.errorlens",
        "streetsidesoftware.code-spell-checker",
        "google.geminicodeassist"
      ]
    }
  },

  "containerEnv": {
    "JDK_HOME": "/usr"
  },

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],

  // Use 'postCreateCommand' to run commands after the container is created.
  // wrangler login command is used to workaround https://github.com/cloudflare/workers-sdk/issues/5937
  "postCreateCommand": "doppler login --no-check-version --no-timeout --yes; doppler setup --no-interactive; git config --global --add safe.directory ${containerWorkspaceFolder}; git clone --depth=1 https://github.com/romkatv/powerlevel10k.git ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/themes/powerlevel10k; git clone https://github.com/zsh-users/zsh-syntax-highlighting.git ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-syntax-highlighting; git clone https://github.com/zsh-users/zsh-autosuggestions ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-autosuggestions; cd webapp; npx wrangler login --browser=false --callback-host=0.0.0.0 --callback-port=8976 | stdbuf -oL sed 's/0\\.0\\.0\\.0/localhost/g'",

  // Comment out to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
  "remoteUser": "node"
}
