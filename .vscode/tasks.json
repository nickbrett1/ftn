{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "presentation": {
    "echo": true,
    "reveal": "always",
    "focus": false,
    "panel": "dedicated",
    "showReuseMessage": false
  },
  "tasks": [
    {
      "label": "Run all build tasks",
      "dependsOn": ["svelte dev", "test vitest", "live-server"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "dev",
      "path": "webapp",
      "problemMatcher": [],
      "label": "svelte dev",
      "detail": "svelte dev",
      "group": "build",
      "presentation": {
        "group": "build-group"
      }
    },
    {
      "type": "npm",
      "script": "test",
      "path": "webapp",
      "problemMatcher": [],
      "label": "test vitest",
      "detail": "test vitest",
      "group": "build",
      "presentation": {
        "group": "build-group"
      }
    },
    {
      "label": "live-server",
      "type": "process",
      "command": "${input:startServer}"
    }
  ],
  "inputs": [
    {
      "id": "startServer",
      "type": "command",
      "command": "extension.liveServer.goOnline"
    }
  ]
}
