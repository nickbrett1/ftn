{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true
	},
	"exclude": [
		"playwright.config.js",
		"postcss.config.cjs",
		"svelte.config.js",
		"vite.config.js",
		"tests",
		"src/**/*.test.js",
		"src/stories",
		"src/service-worker.js",
		".svelte-kit"
	]
}
